<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss,SSS} [%t] %-5level: %msg%n%throwable}" disableAnsi="false"/>
        </Console>
        <File name="LogFile" fileName="C:\varaPay\test2.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>
</Configuration>